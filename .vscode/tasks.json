{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Dev Server (SQLite)",
            "type": "shell",
            "command": "air",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DB_ARGS": "-db sqlite -dsn :memory:"
                }
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*building.*$",
                        "endsPattern": "^.*running.*$|^.*Service endpoints:.*$"
                    }
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Start Dev Server (PostgreSQL)",
            "type": "shell",
            "command": "air",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DB_ARGS": "-db postgres -dsn postgresql://odata:odata_dev@localhost:5432/odata_test?sslmode=disable"
                }
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*building.*$",
                        "endsPattern": "^.*running.*$|^.*Service endpoints:.*$"
                    }
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run compliance tests (SQLite)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "./compliance/run_compliance_tests.sh --db sqlite -o ${workspaceFolder}/compliance-report.md"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
        {
            "label": "Run compliance tests (PostgreSQL)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "./compliance/run_compliance_tests.sh --db postgres --dsn postgresql://odata:odata_dev@localhost:5432/odata_test?sslmode=disable -o ${workspaceFolder}/compliance-report.md"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
        {
            "label": "Start Perf Server (SQLite)",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                ".",
                "-db",
                "sqlite",
                "-dsn",
                ":memory:",
                "-extensive=true"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cmd/perfserver"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*Seeding database.*$",
                        "endsPattern": "^.*Performance testing server starting.*$|^.*Service endpoints:.*$"
                    }
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Perf Server (PostgreSQL)",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                ".",
                "-db",
                "postgres",
                "-dsn",
                "postgresql://odata:odata_dev@localhost:5432/odata_test?sslmode=disable",
                "-extensive=true"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cmd/perfserver"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*Seeding database.*$",
                        "endsPattern": "^.*Performance testing server starting.*$|^.*Service endpoints:.*$"
                    }
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Perf Server with CPU Profiling (SQLite)",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                ".",
                "-db",
                "sqlite",
                "-dsn",
                ":memory:",
                "-extensive=true",
                "-cpuprofile",
                "cpu.prof"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cmd/perfserver"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Perf Server with SQL Tracing (SQLite)",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                ".",
                "-db",
                "sqlite",
                "-dsn",
                ":memory:",
                "-extensive=true",
                "-trace-sql",
                "-trace-sql-file",
                "sql-trace.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cmd/perfserver"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}